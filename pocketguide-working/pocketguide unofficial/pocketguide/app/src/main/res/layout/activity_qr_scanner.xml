<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".QR_scanner">

    <TextView
        android:id="@+id/textContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:text="messageContent"/>

    <Button
        android:id="@+id/scanBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_centerInParent="true"
        android:layout_below="@id/textContent"
        android:textColor="@color/black"
        android:text="Scan"
        />

    <Button
        android:id="@+id/playBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_below="@id/scanBtn"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:textColor="@color/black"
        android:text="Audio"
        />

    <Button
        android:id="@+id/pauseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_below="@id/playBtn"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:textColor="@color/black"
        android:text="Stop"
        />

    <Button
        android:id="@+id/button_translate_hindi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_below="@id/pauseBtn"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:textColor="@color/black"
        android:text="Hindi" />

    <Button
        android:id="@+id/button_translate_marathi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_translate_hindi"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/white"
        android:text="Marathi"
        android:textColor="@color/black"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_below="@id/button_translate_marathi"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:textColor="@color/black"
        android:text="Feedback" />
</RelativeLayout>